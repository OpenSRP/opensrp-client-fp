<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_overview_layout_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/tap_button"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_button_below"
        android:lines="2"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/profile_records_message_grey"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/lady_image"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/tab_button_image"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/outline_arrow_back"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="9dp" />
</LinearLayout>